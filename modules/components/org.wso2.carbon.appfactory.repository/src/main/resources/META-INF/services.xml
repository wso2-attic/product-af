<serviceGroup>
    <service name="RepositoryManagementService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="false">
            org.wso2.carbon.appfactory.repository.mgt.service.RepositoryManagementService
        </parameter>
        <parameter name="hiddenService" locked="true">true</parameter>
        <parameter name="adminService" locked="true">true</parameter>
	<parameter name="AuthorizationAction" locked="false">/permission/admin/appfactory/repository/branch</parameter>
	<operation name="getUrl">
                <parameter name="AuthorizationAction" locked="true">/permission/admin/login</parameter>
        </operation>
        <operation name="getUrlForAppVersion">
                <parameter name="AuthorizationAction" locked="true">/permission/admin/login</parameter>
        </operation>
    </service>
    <service name="RepositoryAuthenticationService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="true">
            org.wso2.carbon.appfactory.repository.mgt.service.RepositoryAuthenticationService
        </parameter>
        <parameter name="hiddenService" locked="true">true</parameter>
        <parameter name="adminService" locked="true">true</parameter>
	<parameter name="AuthorizationAction" locked="true">/permission/admin/login</parameter>
    </service>
    <service name="TenantRepositoryCreationService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="true">
            org.wso2.carbon.appfactory.repository.mgt.service.TenantRepositoryCreationService
        </parameter>
        <parameter name="hiddenService" locked="true">true</parameter>
        <parameter name="adminService" locked="true">true</parameter>
	<parameter name="AuthorizationAction" locked="true">/permission/admin/appfactory/application/create</parameter>
    </service>
</serviceGroup>

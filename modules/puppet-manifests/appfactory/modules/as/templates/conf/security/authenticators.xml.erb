<!--
     This is the configuration file for Carbon authenticators. All the authenticator related configurations
     should go here.
-->
<Authenticators xmlns="http://wso2.org/projects/carbon/authenticators.xml">

    <!-- Authenticator Configurations for TokenUIAuthenticator -->
    <Authenticator name="TokenUIAuthenticator" disabled="true">
        <Priority>5</Priority>
    </Authenticator>

    <!-- Authenticator Configurations for SAML2SSOAuthenticator -->
    <Authenticator name="SAML2SSOAuthenticator" disabled="false">
        <Priority>10</Priority>
        <Config>
            <Parameter name="LandingPage">/home/index.html</Parameter>
            <Parameter name="LoginPage">/carbon/admin/login.jsp</Parameter>
	    <Parameter name="ServiceProviderID">WSO2 Stratos Application Server</Parameter>
            <Parameter name="IdentityProviderSSOServiceURL">https://<%= @wso2_env_domain %>/samlsso</Parameter>
	    <Parameter name="KeyAlias">wso2carbon</Parameter>
        </Config>
    </Authenticator>

</Authenticators>


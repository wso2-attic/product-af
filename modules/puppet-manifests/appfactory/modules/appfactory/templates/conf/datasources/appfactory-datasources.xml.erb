        <datasource>
          <name>SOCIAL_CASSANDRA_DB</name>
          <description>The cassandra  datasource used for storing social activities</description>
          <definition type="RDBMS">
            <configuration>
              <url>jdbc:cassandra://<%= @cassandra_cluster[0] %>:<%= @css_port_unoffset %>/EVENT_KS</url>
              <username><%= @cassandra_username %></username>
              <password><%= @cassandra_password %></password>
              <driverClassName>org.apache.cassandra.cql.jdbc.CassandraDriver</driverClassName>
            </configuration>
          </definition>
        </datasource>
     </datasources>
</datasources-configuration>

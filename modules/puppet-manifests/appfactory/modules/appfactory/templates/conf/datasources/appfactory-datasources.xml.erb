<datasources-configuration xmlns:svns="http://org.wso2.securevault/configuration">
    <providers>
        <provider>org.wso2.carbon.ndatasource.rdbms.RDBMSDataSourceReader</provider>
    </providers>
    <datasources>
        <datasource>
            <name>WSO2_APPFAC_CONFIG_DB</name>
            <description>The datasource used for appfactory config registry</description>
            <jndiConfig>
                <name>jdbc/config</name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <%- database = @af_config_database -%>
                    <url>jdbc:mysql://<%= database[0] %>:3306/<%= database[1] %>?autoReconnect=true</url>
                    <username><%= database[2] %></username>
                    <password><%= database[3] %></password>
                    <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                    <maxActive>200</maxActive>
                    <maxWait>60000</maxWait>
                    <testOnBorrow>true</testOnBorrow>
                    <validationQuery>SELECT 1</validationQuery>
                    <validationInterval>30000</validationInterval>
                    <minIdle>5</minIdle>
                    <removeAbandoned>true</removeAbandoned>
                    <logAbandoned>true</logAbandoned>
                    <removeAbandonedTimeout>180</removeAbandonedTimeout>
                </configuration>
            </definition>
        </datasource>
        <!-- To be used by the cloud management app on management.cloud.wso2.com -->
        <datasource>
            <name>cloud_mgt</name>
            <description>The datasource used for cloud management purposes</description>
            <jndiConfig>
                <name>jdbc/cloud_mgt</name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <%- database = @cloud_mgt_database -%>
                    <url>jdbc:mysql://<%= database[0] %>:3306/<%= database[1] %>?autoReconnect=true</url>
                    <username><%= database[2] %></username>
                    <password><%= database[3] %></password>
                    <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                    <maxActive>200</maxActive>
                    <maxWait>60000</maxWait>
                    <testOnBorrow>true</testOnBorrow>
                    <validationQuery>SELECT 1</validationQuery>
                    <validationInterval>30000</validationInterval>
                </configuration>
            </definition>
        </datasource>
        <datasource>
            <name>WSO2_ISSUE_TRACKER_DB</name>
            <description>The datasource used for the issue tracker</description>
            <jndiConfig>
                <name>jdbc/IssueTrackerDB</name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <%- database = @issuetracker_database -%>
                    <url>jdbc:mysql://<%= database[0] %>:3306/<%= database[1] %>?autoReconnect=true</url>
                    <username><%= database[2] %></username>
                    <password><%= database[3] %></password>
                    <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                    <maxActive>50</maxActive>
                    <maxWait>60000</maxWait>
                    <testOnBorrow>true</testOnBorrow>
                    <validationQuery>SELECT 1</validationQuery>
                    <validationInterval>30000</validationInterval>
                </configuration>
            </definition>
        </datasource>

        <datasource>
            <name>WSO2_APPFACTORY_DB</name>
            <description>The datasource used for the app factory</description>
            <jndiConfig>
                <name>jdbc/WSO2AppfactoryDB</name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <%- database = @af_database -%>
                    <url>jdbc:mysql://<%= database[0] %>:3306/<%= database[1] %>?autoReconnect=true</url>
                    <username><%= database[2] %></username>
                    <password><%= database[3] %></password>
                    <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                    <maxActive>50</maxActive>
                    <maxWait>60000</maxWait>
                    <testOnBorrow>true</testOnBorrow>
                    <validationQuery>SELECT 1</validationQuery>
                    <validationInterval>30000</validationInterval>
                </configuration>
            </definition>
        </datasource>



<!--

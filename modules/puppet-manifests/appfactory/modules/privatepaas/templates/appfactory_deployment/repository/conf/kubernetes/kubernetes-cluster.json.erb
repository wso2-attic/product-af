{
    "clusterId": "kubernetes-cluster",
    "description": "Kubernetes Cluster",
    "kubernetesMaster": {
        "hostId": "master",
        "hostname": "master.dev.kubernetes.org",
        "privateIPAddress": "<%= @kubernetes_host_ip %>",
        "publicIPAddress": "<%= @kubernetes_host_ip %>",
        "property": [
             {
                "name": "KUBERNETES_MASTER_PORT",
                "value": "<%= @kubernetes_port %>"
             }
        ]
    },
    "portRange": {
        "upper": "32767",
        "lower": "30000"
    },
    "kubernetesHosts": [
        {
            "hostId": "minion-1",
            "hostname": "minion-1.dev.kubernetes.org",
            "privateIPAddress": "<%= @kubernetes_host_ip %>",
            "publicIPAddress": "<%= @kubernetes_host_ip %>",
            "property": [
            ]
        }

    ],
    "property": [
        {
            "name": "payload_parameter.MB_IP",
            "value": "<%= @ipaddress %>"
        },
        {
            "name": "payload_parameter.MB_PORT",
            "value": "1883"
        },
        {
            "name": "payload_parameter.CEP_IP",
            "value": "<%= @ipaddress %>"
        },
        {
            "name": "payload_parameter.CEP_PORT",
            "value": "7731"
        },
        {
            "name": "payload_parameter.LOG_LEVEL",
            "value": "DEBUG"
        },
        {
            "name": "payload_parameter.METADATA_SERVICE_URL",
            "value": "https://<%= @ipaddress %>:<%= 9443 + Integer(@offset) %>"
        }
    ]
}

                var errorMsg = "Failed to complete "+action +" action.";
                log.error(errorMsg);
                log.error(e);
                response.status = 500;
                response.content = errorMsg;
            }
        }  else {
            result.result = 0;
            result.message = "You don't have permission to perform the life cycle operation";
            print(result);
        }


    } else if ( action == "deployAndUpdatePromoteStatus"){

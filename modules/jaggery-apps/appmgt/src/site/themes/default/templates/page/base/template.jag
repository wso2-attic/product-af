        <p class="sub_heading">
	    <img id="icon" src="<%=iconUrl%>" alt="" height="50px" width="50px" />
            <a href="<%=jagg.getAbsoluteUrl("/site/pages/application.jag")%>?applicationName=<%=applicationName%>&applicationKey=<%=applicationKey%>">
            <%=applicationName%></a>
        </p>
        <% } %>
        <div class="clearfix"></div>


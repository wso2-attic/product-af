            <div class="dropdown user right">


              <%
                if(userName!=null) {
              %>

              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <!--<img class="user_photo" src="assets/img/avatar.png" alt="Avatar of avatar" />--> <%=userName%>
                <span class="icon-chevron-down"></span>
              </a>

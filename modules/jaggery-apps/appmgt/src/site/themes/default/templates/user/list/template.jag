			text: $(this).next()
		},
		style: {
				classes: 'popover_box short_box',
				widget: false,
				def: false,
				tip: false
			},
		hide: {
			fixed: true,
			event: null,
			effect: function(offset) {
				$(this).slideUp(200);
			}
		},
		show:
		{
			event: 'click',
			effect: function(offset) {
                if(selectedCount!==0){

				$(this).slideDown(200);
                }
			}
		},
		events: {
					show: function(event, api) {
						 api.elements.target.addClass('active');

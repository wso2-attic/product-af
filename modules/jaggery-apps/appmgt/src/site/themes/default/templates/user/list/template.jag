    function disable(btnId){
        var classes=$('#'+btnId).attr('class');
        if(classes.indexOf('disable')===-1){
            $('#'+btnId).addClass("disable");
        }


    }
    function enable(btnId){
        var classes=$('#'+btnId).attr('class');
        if(classes.indexOf('disable')!==-1){
            $('#'+btnId).removeClass("disable");
        }
    }
    function enableDisableEditDeleteButtons(enablePara){

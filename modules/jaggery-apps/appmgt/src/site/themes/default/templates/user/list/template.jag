                            }, 300);

                        }
                        enableDisableEditDeleteButtons(false);

                        return result;
                    }else if(result==false){

                        return result;
                    }
                },
                function (jqXHR, textStatus, errorThrown) {
                    // showNotification('notifier','message','Your invitation has not been sent to '+newUserNames,'error');
                });

    }

